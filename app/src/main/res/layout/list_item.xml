<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/product_picture_description"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_add_black_24dp" />

    <LinearLayout
        android:id="@+id/layout_item_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Product name" />

        <TextView
            android:id="@+id/inventory_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="$ 99.99" />

        <TextView
            android:id="@+id/product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            tools:text="10 units left" />

    </LinearLayout>

    <Button
        android:id="@+id/button_sell_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="@color/colorSecondary"
        android:backgroundTintMode="multiply"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/button_sell_product" />

</LinearLayout>